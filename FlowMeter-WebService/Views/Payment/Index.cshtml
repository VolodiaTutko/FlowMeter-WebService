@model IEnumerable<Application.Models.Payment>

@{
    ViewData["Title"] = "Index";
    ViewBag.PartialViewName = "_CreatePaymentForm";
    ViewBag.ModalTitle = "Create new payment";
}

@Html.Partial("_TableNavigation")

<h1>Index</h1>

@Html.Partial("_CreateModal")

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Consumer.House.HouseAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consumer.ConsumerOwner)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null & Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Consumer.House.HouseAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonalAccount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Consumer.ConsumerOwner)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                            
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PersonalAccount">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PersonalAccount">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PersonalAccount">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
                <p>No consumers found.</p>
        }
    </tbody>
</table>

@model IEnumerable<Application.Models.House>

@{
    ViewData["Title"] = "Index";
    ViewBag.PartialViewName = "_CreateHouseForm";
    ViewBag.ModalTitle = "Create new house";
}

@Html.Partial("_TableNavigation")

<h1>Houses</h1>

@Html.Partial("_CreateModal")

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HouseAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeatingAreaOfHouse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfFlat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfResidents)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HouseAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeatingAreaOfHouse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfFlat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfResidents)
                </td>
                <td>
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <button type="submit" data-bs-toggle="modal" data-bs-target="#updateModal-@item.HouseId" class="btn btn-primary w-100">Edit</button>
                                    <form asp-controller="House" asp-action="Update" asp-route-id="@item.HouseId" method="post">
                                        <input type="hidden" id="HouseId" name="HouseId" value="@item.HouseId" />
                                        <div class="modal fade" id="updateModal-@item.HouseId" tabindex="-1" aria-labelledby="updateModalLabel-@item.HouseId" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h1 class="modal-title fs-5" id="updateModalLabel-@item.HouseId">Edit house</h1>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="container">
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="form-group row mt-3">
                                                                        <label for="HouseAddress" class="col-form-label col-md-6">Адреса</label>
                                                                        <div class="col-md-6">
                                                                            <input type="text" id="HouseAddress" class="form-control" name="HouseAddress" value=@item.HouseAddress>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group row mt-3">
                                                                        <label for="HeatingAreaOfHouse" class="col-form-label col-md-6">Опалювальна площа</label>
                                                                        <div class="col-md-6">
                                                                            <input type="number" min="0" id="HeatingAreaOfHouse" class="form-control" name="HeatingAreaOfHouse" value=@item.HeatingAreaOfHouse>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group row mt-3">
                                                                        <label for="NumberOfFlat" class="col-form-label col-md-6">К-ть квартир</label>
                                                                        <div class="col-md-6">
                                                                            <input type="number" min="0" id="NumberOfFlat" class="form-control" name="NumberOfFlat" value=@item.NumberOfFlat>
                                                                        </div>
                                                                    </div>

                                                                <div class="form-group row mt-3">
                                                                    <label for="NumberOfResidents" class="col-form-label col-md-6">К-ть зареєстрованих осіб</label>
                                                                    <div class="col-md-6">
                                                                        <input type="number" min="0" id="NumberOfResidents" class="form-control" name="NumberOfResidents" value=@item.NumberOfResidents>
                                                                    </div>
                                                                </div>



                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="col">
                                <form asp-controller="Consumer" asp-action="Details" asp-route-id="@item.HouseId" method="get">
                                    <button type="submit" class="btn btn-info w-100">Details</button>
                                </form>
                            </div>

                            <div class="col">
                                <form method="post" asp-controller="House" asp-action="Delete" asp-route-id="@item.HouseId" onsubmit="return confirm('Are you sure you want to delete this house?');">
                                    <button type="submit" class="btn btn-danger w-100">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>         
                </td>
            </tr>
        }
    }
    else
    {
        <p>No houses found.</p>
    }
    </tbody>
</table>
